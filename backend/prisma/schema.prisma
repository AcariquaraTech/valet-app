// Prisma Schema - APP VALET (SQLite Compatible)
// Simplified version for quick start

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// Clients (Donos de Estacionamentos)
model Client {
  id            String   @id @default(uuid())
  name          String
  email         String   @unique
  phone         String
  companyName   String?
  address       String?
  city          String?
  state         String?
  zipCode       String?
  document      String?  // CNPJ
  contactName   String?
  contactEmail  String?
  contactPhone  String?
  active        Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  accessKeys    AccessKey[]     @relation
  vehicles      Vehicle[]       @relation("ValetVehicles")
  vehicleEntries VehicleEntry[] @relation("ValetEntries")
  
  @@map("clients")
}

// Users (Admin, Operators, Clients)
model User {
  id        String   @id @default(uuid())
  name      String
  nickname  String   @unique
  password  String
  phone     String?
  email     String?
  role      String   // 'admin', 'operator', 'client'
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  vehicles       Vehicle[]      @relation("ClientVehicles")
  vehicleEntries VehicleEntry[] @relation("OperatorEntries")
  accessKeys     AccessKey[]    @relation("UserAccessKeys")
  
  @@map("users")
}

// Vehicles
model Vehicle {
  id            String   @id @default(uuid())
  vehicleNumber Int?     // Número sequencial para identificação
  plate         String   @unique
  model         String?
  color         String?
  year          Int?
  clientId      String   // Dono do veículo (User)
  clientName    String?
  clientPhone   String?
  notes         String?
  valetClientId String   // ID do Cliente Valet (isolamento multi-tenant)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  client      User           @relation("ClientVehicles", fields: [clientId], references: [id])
  valetClient Client         @relation("ValetVehicles", fields: [valetClientId], references: [id], onDelete: Cascade)
  entries     VehicleEntry[]
  
  @@map("vehicles")
}

// Vehicle Entries and Exits
model VehicleEntry {
  id            String    @id @default(uuid())
  entryNumber   Int?      // Número sequencial da entrada
  vehicleId     String
  operatorId    String
  valetClientId String    // ID do Cliente Valet (isolamento multi-tenant)
  entryTime     DateTime  @default(now())
  exitTime      DateTime?
  spotNumber    String?
  observations  String?
  totalPrice    Float?
  status        String    @default("parked") // 'parked', 'retrieved', 'cancelled'
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  vehicle     Vehicle @relation(fields: [vehicleId], references: [id])
  operator    User    @relation("OperatorEntries", fields: [operatorId], references: [id])
  valetClient Client  @relation("ValetEntries", fields: [valetClientId], references: [id], onDelete: Cascade)
  
  @@map("vehicle_entries")
}

// SMS Notifications
model SmsNotification {
  id          String   @id @default(uuid())
  phoneNumber String
  message     String
  status      String   @default("pending") // 'pending', 'sent', 'failed'
  provider    String?
  providerId  String?
  sentAt      DateTime?
  createdAt   DateTime @default(now())
  
  @@map("sms_notifications")
}

// OCR Scans
model OcrScan {
  id         String   @id @default(uuid())
  vehicleId  String?
  plate      String
  confidence Float
  rawText    String?
  imagePath  String?
  success    Boolean  @default(true)
  createdAt  DateTime @default(now())
  
  @@map("ocr_scans")
}

// System Logs
model SystemLog {
  id        String   @id @default(uuid())
  userId    String?
  action    String
  entity    String?
  entityId  String?
  details   String?
  ipAddress String?
  createdAt DateTime @default(now())
  
  @@map("system_logs")
}

// Access Keys (Licenças para clientes)
model AccessKey {
  id              String   @id @default(uuid())
  code            String   @unique // Chave única (ex: VALET-ABC123XYZ)
  clientId        String   // Referência ao Client (dono do estacionamento)
  clientName      String   // Nome do cliente
  companyName     String?  // Nome da empresa do cliente
  clientEmail     String?
  clientPhone     String?
  observations    String?
  status          String   @default("active") // 'active', 'revoked', 'expired'
  expiresAt       DateTime? // Data de expiração da mensalidade
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  revokedAt       DateTime? // Quando foi revogada
  revokedReason   String?  // Motivo da revogação
  lastValidatedAt DateTime? // Última validação do app
  deviceId        String?  // ID do device que está usando
  
  client Client @relation(fields: [clientId], references: [id], onDelete: Cascade)
  users  User[] @relation("UserAccessKeys")
  
  @@map("access_keys")
}

// Validações de Acesso (log de tentativas)
model AccessValidationLog {
  id           String   @id @default(uuid())
  accessKeyId  String
  deviceId     String?
  ipAddress    String?
  status       String   // 'valid', 'invalid', 'expired', 'revoked'
  appVersion   String?
  osVersion    String?
  createdAt    DateTime @default(now())
  
  @@map("access_validation_logs")
}
